@using OgrenciNotMVC.Models.EntityFramework
@model List<Ogrenciler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ÖGRENCİ ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>CİNSİYET</th>
        <th>KULÜP</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach (var ogr in Model)
        {
        <tr>
            <td>@ogr.OgrenciId</td>
            <td>@ogr.OgrenciAd</td>
            <td>@ogr.OgrenciSoyad</td>
            <td>@ogr.OgreciCinsiyet</td>
            <td>@ogr.Kulupler.KulupAd</td>
            <td><a href="/Ogrenci/Sil/@ogr.OgrenciId" class="btn btn-danger">Sil</a> <a href="/Ogrenci/OgrenciGetir/@ogr.OgrenciId" class="btn btn-success">Güncelle</a></td>

        </tr>

        }
    </tbody>
</table>
<a href="/Ogrenci/YeniOgrenci" class="btn btn-primary">Yeni Öğrenci Kaydı</a>
