@using OgrenciNotMVC.Models.EntityFramework
@model List<Notlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>NOT ID</th>
        <th>OGRENCİ</th>
        <th>DERS</th>
        <th>SINAV1</th>
        <th>SINAV2</th>
        <th>SINAV3</th>
        <th>ORTALAMA</th>
        <th>DURUM</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var snv in Model)
        {
            <tr>
                <td>@snv.NotId</td>
                <td>@snv.OgrId</td>
                <td>@snv.DersId</td>
                <td>@snv.Sinav1</td>
                <td>@snv.Sinav2</td>
                <td>@snv.Sinav3</td>
                <td>@snv.Ortalama</td>
                <td>@snv.Durum</td>
                <td><a href="/Not/NotGetir/@snv.NotId" class="btn btn-warning">Güncelle</a></td>

            </tr>

        }
    </tbody>
</table>
<a href="/Not/YeniSinav" class="btn btn-primary">Yeni Sınav Girişi</a>

